---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Psychology News - Stay updated with the latest research and insights in psychology" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="bg-primary-600 text-white shadow-lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <h1 class="text-2xl font-bold">Psychology News</h1>
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <a href="/" class="hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">Home</a>
              <a href="#" class="hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">Research</a>
              <a href="#" class="hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">Mental Health</a>
              <a href="#" class="hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">Cognitive Science</a>
              <a href="#" class="hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">About</a>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <main class="min-h-screen bg-gray-50">
      <slot />
    </main>
    <footer class="bg-gray-800 text-white py-8 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p>&copy; 2024 Psychology News. All rights reserved.</p>
          <p class="mt-2 text-sm text-gray-400">Stay informed about the latest developments in psychological research</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
      Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>